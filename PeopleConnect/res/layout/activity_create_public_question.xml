<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff6f6f6"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff227bad" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal" >

            <ImageView
                style="@style/ImageIconPC"
                android:src="@drawable/icon" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="Create Public Question"
                android:textColor="#ffffffff"
                android:textSize="18.0dip" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50.0dip"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/etPublicQuestion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/edittext_layout"
                android:fontFamily="verdena"
                android:gravity="top"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:lines="5"
                android:padding="5.0dip"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/etOption1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30.0dip"
                android:background="@drawable/edittext_layout"
                android:fontFamily="verdena"
                android:hint="Option 1"
                android:padding="5.0dip"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/etOption3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/edittext_layout"
                android:ems="10"
                android:fontFamily="verdena"
                android:hint="Option 2"
                android:padding="5.0dip"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/etOption2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/edittext_layout"
                android:fontFamily="verdena"
                android:hint="Option 3"
                android:padding="5.0dip"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/etOption4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/edittext_layout"
                android:fontFamily="verdena"
                android:hint="Option 4"
                android:padding="5.0dip"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/etOption5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/edittext_layout"
                android:fontFamily="verdena"
                android:hint="Option 5"
                android:padding="5.0dip"
                android:textSize="18.0sp" />

            <TextView
                style="@style/ItemHeading"
                android:layout_marginTop="30.0dip"
                android:text="Broadcast to:" />

            <RadioGroup
                android:id="@+id/rgRecipientsPublicQuestion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/rbAreaPublicQuestions"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25.0dip"
                    android:text="My Area" />

                <RadioButton
                    android:id="@+id/rbCityPublicQuestions"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:text="My City" />

                <RadioButton
                    android:id="@+id/rbStatePublicQuestions"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:text="My State" />

                <RadioButton
                    android:id="@+id/rbCountryPublicQuestions"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:text="My Country (India)" />
            </RadioGroup>

            <TextView
                style="@style/ItemHeading"
                android:layout_marginTop="30.0dip"
                android:text="Select Closing Date for Voting" />

            <Button
                android:id="@+id/bClosingDateCreateQuestion"
                style="@style/HomePageTitles"
                android:layout_marginLeft="50.0dip"
                android:layout_marginRight="50.0dip"
                android:padding="5.0dip"
                android:text="Choose Closing date " />

            <Button
                android:id="@+id/bCreatePublicQuestion"
                style="@style/HomePageTitles"
                android:padding="5.0dip"
                android:text="Broadcast Public Question" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>