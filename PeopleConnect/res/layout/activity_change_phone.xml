<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff6f6f6"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff227bad" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal" >

            <ImageView
                style="@style/ImageIconPC"
                android:src="@drawable/icon" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="Complaints"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/Info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Enter your new phone number. Your current phone number is" />

            <TextView
                android:id="@+id/tvCurrentPhoneNumber"
                style="@style/Info"
                android:gravity="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNewPhoneNumber"
                android:layout_width="200.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/textview_layout"
                android:gravity="center"
                android:hint="New Phone Number"
                android:inputType="phone"
                android:padding="7.0dip" />

            <Button
                android:id="@+id/bSendVerificationChangeNumber"
                style="@style/HomePageTitles"
                android:layout_height="wrap_content"
                android:text="Verify" />

            <TextView
                android:id="@+id/message"
                style="@style/Info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <EditText
                android:id="@+id/etVerificationCodeChangePhone"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/edittext_layout"
                android:gravity="center"
                android:hint="V Code"
                android:inputType="number"
                android:padding="7.0dip" />
        </LinearLayout>

        <Button
            android:id="@+id/bChangePhoneNumber"
            style="@style/HomePageTitles"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Change Phone Number" />
    </RelativeLayout>

</LinearLayout>