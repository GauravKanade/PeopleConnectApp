<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff22ad7b" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal" >

            <ImageView
                style="@style/ImageIconPC"
                android:src="@drawable/icon" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="My Account"
                android:textColor="#ffffffff"
                android:textSize="18.0dip" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/Info"
                android:text="Change Password" />

            <EditText
                android:id="@+id/etExistingPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7.0dip"
                android:background="@drawable/textview_layout"
                android:hint="Existing Password"
                android:inputType="textPassword"
                android:padding="7.0dip" />

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7.0dip"
                android:background="@drawable/textview_layout"
                android:hint="New Password"
                android:inputType="textPassword"
                android:padding="7.0dip" />

            <EditText
                android:id="@+id/etReenterPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7.0dip"
                android:background="@drawable/textview_layout"
                android:hint="Re-enter password"
                android:inputType="textPassword"
                android:padding="7.0dip" />
        </LinearLayout>

        <Button
            android:id="@+id/bChangePasswordInServer"
            style="@style/HomePageTitles"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="5.0dip"
            android:text="Change Password" />
    </RelativeLayout>

</LinearLayout>