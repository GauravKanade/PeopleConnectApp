<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#fff6f6f6"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ff227bad" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ivUser"
                        android:layout_width="40.0dip"
                        android:layout_height="45.0dip"
                        android:src="@drawable/icon_menu" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="People Connect"
                        android:textAlignment="center"
                        android:textColor="#ffffffff"
                        android:textSize="18.0sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100.0"
                android:orientation="vertical"
                android:paddingTop="40.0dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="30.0" >

                    <Button
                        android:id="@+id/BCreateComplaintMainPage"
                        style="@style/HomePageTitles"
                        android:background="@drawable/homepagebutton"
                        android:drawableTop="@drawable/ic_action_email"
                        android:text="Create Complaint" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="30.0"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/BMyAccount"
                        style="@style/HomePageTitles"
                        android:layout_weight="50.0"
                        android:background="@drawable/homepagebutton"
                        android:drawableTop="@drawable/ic_action_labels"
                        android:text="My Account" />

                    <Button
                        android:id="@+id/BComplains"
                        style="@style/HomePageTitles"
                        android:layout_weight="50.0"
                        android:background="@drawable/homepagebutton"
                        android:drawableTop="@drawable/ic_action_about"
                        android:text="Complaints" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="30.0"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/BPublicOpinions"
                        style="@style/HomePageTitles"
                        android:layout_weight="49.0"
                        android:background="@drawable/homepagebutton"
                        android:drawableTop="@drawable/ic_action_group"
                        android:text="Public Opinions" />

                    <Button
                        android:id="@+id/BSettings"
                        style="@style/HomePageTitles"
                        android:layout_weight="49.0"
                        android:background="@drawable/homepagebutton"
                        android:drawableTop="@drawable/ic_action_settings"
                        android:text="Support" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="33.0" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:background="#fff6f6f6"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0dip"
        android:paddingTop="60.0dip" />

</android.support.v4.widget.DrawerLayout>