<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff6f6f6" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff6f6f6"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff227bad" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >

                <ImageView
                    style="@style/ImageIconPC"
                    android:src="@drawable/icon" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="Create User Account "
                    android:textColor="#ffffffff"
                    android:textSize="18.0sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            style="@style/Info"
            android:gravity="center"
            android:text="You will receive a Verification Code via SMS. Please enter that code to continue with the registraion process. Kindly Wait" />

        <EditText
            android:id="@+id/etVerificationCode"
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60.0dip"
            android:gravity="center"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/bSendVerification"
        style="@style/HomePageTitles"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5.0dip"
        android:text="Create Account" />

</RelativeLayout>