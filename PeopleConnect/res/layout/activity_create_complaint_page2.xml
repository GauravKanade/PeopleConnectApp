<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff6f6f6"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff227bad" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal" >

            <ImageView
                style="@style/ImageIconPC"
                android:src="@drawable/icon" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="Create Complaint 2"
                android:textColor="#ffffffff"
                android:textSize="18.0dip" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTitleComplaintCreate2"
                style="@style/ItemDescription"
                android:text="Sample" />

            <TextView
                android:id="@+id/tvDescriptionComplaintCreate2"
                style="@style/ItemDescription"
                android:text="Description" />

            <TextView
                android:id="@+id/tvAddressComplaintCreate2"
                style="@style/ItemDescription"
                android:text="Address" />

            <TextView
                style="@style/ItemDescription"
                android:text="Choose Category" />

            <LinearLayout
                android:id="@+id/llCategoryContainer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" />

            <Button
                android:id="@+id/bPostComplaint"
                style="@style/HomePageTitles"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Post Complaint" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>